<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.gmrit.bhojanforall.activities.volunteer.VolunteerProfileActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/volunteer" />

    <TextView
        android:id="@+id/volunprofilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_name"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/volunprofilephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/volunprofileemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:textColor="#000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/volunprofilecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/total_no_of_deliveries"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

</LinearLayout>

